<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HtmlRenderer.ViewModels"
             xmlns:m="using:HtmlRenderer.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HtmlRenderer.Views.SamplesListView"
             x:DataType="vm:SamplesListViewModel">
    <ItemsControl ItemsSource="{Binding SamplesList}">
        <ItemsControl.DataTemplates>
            <DataTemplate x:DataType="m:Sample">
                <Button Margin="0"
                        Width="100"
                        Content="{Binding Name}"
                        Click="Button_OnClick"/>
            </DataTemplate>
        </ItemsControl.DataTemplates>
    </ItemsControl>
</UserControl>
